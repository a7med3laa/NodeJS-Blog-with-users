<%- include("partials/header"); -%>

<div class="form">
    <form class="form-signin" action="/register" method="POST">
        <fieldset>
            <div id="legend">
                <legend class="">Register</legend>
            </div>

            <br>
            <div>
                <p class="errorMessage"><%= errorMessage%></p>
            </div>
            <br>
            <div class="control-group">
                <!-- Username -->
                <label class="control-label" for="username">Username</label><br>
                <div class="controls">
                    <input type="text" id="username" name="username" placeholder="Enter Name" class="form-control">
                </div>
            </div>

            <br>

            <div class="control-group">
                <!-- E-mail -->
                <label class="control-label" for="email">E-mail</label><br>
                <div class="controls">
                    <input type="email" id="email" name="email" placeholder="E-mail" class="form-control">

                </div>
            </div>
            <br>
            <div class="control-group">
                <!-- Password-->
                <label class="control-label" for="password">Password</label>
                <br>
                <div class="controls">
                    <input type="password" id="password" name="password" placeholder="Password" class="form-control">

                </div>
            </div>
            <br>
            <div class="control-group">
                <!-- Password -->
                <label class="control-label" for="password_confirm">Confirm Password</label>
                <br>
                <div class="controls">
                    <input type="password" class="form-control" name="passwordConf" placeholder="Password"
                        class="input-xlarge">
                </div>
            </div>
            <br>
            <div class="control-group form">
                <!-- Button -->
                <div class="controls">
                    <br>
                    <input type="submit" class="btn btn-lg btn-primary btn-block btn-color" value="Register">
                </div>
            </div>
        </fieldset>
    </form>


</div>
<%- include("partials/footer"); -%>